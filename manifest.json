{
    "name": "Espero",
    "version": "1.0",
    "description": "An extension that helps you learn a new language by changing a few words on the page to a foreign language",
    "manifest_version": 2,
    "content_scripts": [{
        "matches": ["<all_urls>"],
        "js": ["translate.js", "jquery.js"],
        "css": ["explanation.css"]
    }],
    "browser_action": {
        "default_popup": "main.html",
        "default_title": "Espero"
    },
    "web_accessible_resources": [
        "media/*.png",
        "txt/*.txt"
    ],
    "content_security_policy": "script-src 'self' 'sha256-MZOUb6AUX19aUUOLiJaucdzj1LM1bh1rYCqX/rW56vQ='; object-src 'self'"
}
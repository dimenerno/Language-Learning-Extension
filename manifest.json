{
    "name": "Espero",
    "version": "1.0",
    "description": "An extension that helps you learn a new language by changing a few words on the page to a foreign language",
    "manifest_version": 2,
    "content_scripts": [{
        "matches": ["<all_urls>"],
        "js": ["translate.js", "jquery.js"],
        "css": ["explanation.css"]
    }],
    "background": {
        "scripts": ["translate.js", "jquery.js"],
        "persistent": true
    },
    "browser_action": {
        "default_popup": "main.html",
        "default_title": "Espero"
    },
    "web_accessible_resources": [
        "media/*.png",
        "txt/*.txt"
    ],
    "permissions": [
        "storage"
    ],
    "content_security_policy": "script-src 'self' 'sha256-ph8xWndEoOBgmUO+qHvN4L2oOiIxh+4ISCnC/Z0J+zA='; object-src 'self'"
}